<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/background"
    android:gravity="center"
    tools:context=".Maps.userLatitudeLongitude">
    <TextView

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="@dimen/_20sdp"
        android:gravity="center"
        android:fontFamily="@font/simple_beauty"
        android:textSize="@dimen/_15sdp"
        android:hint="You're from"
        android:textColorHint="@color/black"
        android:textColor="@color/black"
     />

    <TextView
        android:id="@+id/show_location"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="@dimen/_20sdp"
        android:gravity="center"
        android:fontFamily="@font/simple_beauty"
        android:textSize="@dimen/_15sdp"
        android:hint="Location"
        android:textColorHint="@color/black"
        android:textColor="@color/black"
      />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Get My Current Location"
        android:layout_marginRight="@dimen/_20sdp"
        android:layout_marginLeft="@dimen/_20sdp"
        android:fontFamily="@font/simple_beauty"
        android:textSize="@dimen/_15sdp"
        android:background="@drawable/roundandround"
        android:textColor="@color/black"
        android:id="@+id/getLocation"
        />

    <Button
        android:id="@+id/nextButton"
        android:layout_width="match_parent"
        android:background="@drawable/roundandround"
        android:layout_height="wrap_content"
        android:text="Continue to homeaide"
        android:layout_marginLeft="@dimen/_20sdp"
        android:layout_marginRight="@dimen/_20sdp"
        android:layout_marginTop="@dimen/_10sdp"
        android:fontFamily="@font/simple_beauty"
        android:textColor="@color/black"
        android:textSize="@dimen/_15sdp"
        android:drawableLeft="@drawable/ic_home_black_24dp"
        />

</LinearLayout>