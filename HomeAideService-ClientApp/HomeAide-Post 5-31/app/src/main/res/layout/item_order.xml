<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_margin="8dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white">

    <ImageView
        android:id="@+id/iv_orderPhoto"
        android:layout_width="105dp"
        android:layout_height="74dp"
        android:src="@drawable/sh_logo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_orderName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:text="name"
        android:textAllCaps="true"
        android:textColor="@color/black"
        android:textSize="16dp"
        android:maxHeight="42dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/iv_orderPhoto"
        app:layout_constraintTop_toTopOf="@+id/iv_orderPhoto" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ordered: "
        android:textSize="8dp"
        app:layout_constraintStart_toStartOf="@+id/tv_orderName"
        app:layout_constraintTop_toBottomOf="@+id/tv_orderName" />

    <TextView
        android:id="@+id/tv_orderedTimeDifferece"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="10 min"
        android:textSize="8dp"
        app:layout_constraintStart_toEndOf="@+id/textView3"
        app:layout_constraintTop_toTopOf="@+id/textView3" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=" ago"
        android:textSize="8dp"
        app:layout_constraintStart_toEndOf="@+id/tv_orderedTimeDifferece"
        app:layout_constraintTop_toTopOf="@+id/tv_orderedTimeDifferece" />


</androidx.constraintlayout.widget.ConstraintLayout>