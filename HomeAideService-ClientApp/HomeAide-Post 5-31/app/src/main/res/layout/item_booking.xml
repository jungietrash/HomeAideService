<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="wrap_content"
    android:background="@drawable/roundandround"
    android:layout_margin="@dimen/_5sdp"
    android:orientation="horizontal"
    android:layout_marginBottom="@dimen/_50sdp"
    android:paddingBottom="@dimen/_10sdp"
    android:padding="@dimen/_10sdp">



    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/iv_bookingPhoto"
        android:layout_width="@dimen/_70sdp"
        android:layout_height="@dimen/_50sdp"

        android:src="@drawable/sh_logo" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_marginLeft="@dimen/_10sdp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_bookingName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="name"
            android:layout_marginBottom="@dimen/_10sdp"
            android:textAllCaps="true"
            android:fontFamily="@font/simple_beauty"
            android:textColor="@color/black"
            android:textSize="@dimen/_12sdp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_bookingDay"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Day"
                android:fontFamily="@font/simple_beauty"
                android:textColor="@color/black"
                android:textSize="@dimen/_10sdp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=","
                android:textStyle="bold"
                android:layout_marginLeft="@dimen/_5sdp"
                android:fontFamily="@font/simple_beauty"
                android:textColor="@color/black"
                android:textSize="@dimen/_10sdp" />

            <TextView
                android:id="@+id/tv_bookingMonth"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Month"
                android:layout_marginLeft="@dimen/_5sdp"
                android:fontFamily="@font/simple_beauty"
                android:textColor="@color/black"
                android:textSize="@dimen/_10sdp" />




            <TextView
                android:id="@+id/tv_bookingDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="date"
                android:layout_marginLeft="@dimen/_5sdp"
                android:fontFamily="@font/simple_beauty"
                android:textColor="@color/black"
                android:textSize="@dimen/_10sdp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2022"
                android:textAllCaps="true"
                android:layout_marginLeft="@dimen/_5sdp"
                android:fontFamily="@font/simple_beauty"
                android:textColor="@color/black"
                android:textSize="@dimen/_10sdp"/>





        </LinearLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="See Details >"
            android:layout_gravity="right"
            android:layout_marginRight="@dimen/_20sdp"
            android:gravity="right"
            android:textColor="@color/orange"
            android:textSize="@dimen/_8sdp"/>



    </LinearLayout>







</LinearLayout>