<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".edit_profile_page"
    android:background="@color/background">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        app:layout_constraintBottom_toTopOf="@+id/cardViewBottom"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cardView">

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="match_parent"
            android:paddingBottom="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_12sdp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_back"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/back_arrow"
                    android:gravity="center"
                    android:textSize="16sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Edit Profile Page"
                    android:paddingRight="@dimen/_10sdp"
                    android:layout_gravity="center"
                    android:paddingLeft="@dimen/_10sdp"
                    android:gravity="center"
                    android:fontFamily="@font/simple_beauty"
                    android:textColor="@color/orange"
                    android:textSize="@dimen/_25sdp"/>
                <ImageView
                    android:id="@+id/btn_cancel"
                    android:layout_width="@dimen/_30sdp"
                    android:layout_height="@dimen/_30sdp"
                    android:layout_marginEnd="8dp"
                    android:elevation="10dp"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:src="@drawable/cancel"
                    android:text="Edit profile"
                    android:textSize="18sp"
                    android:visibility="invisible"
                    app:tint="@color/red_delete_btn" />

                <ImageView
                    android:id="@+id/iv_saveButton"
                    android:layout_width="@dimen/_30sdp"
                    android:layout_height="@dimen/_30sdp"
                    android:elevation="10dp"
                    android:src="@drawable/check"
                    android:text="Edit profile"
                    android:textSize="18sp"
                    android:visibility="invisible"
                    app:tint="@color/quantum_googgreen800" />

                <ImageView
                    android:id="@+id/btn_update"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_30sdp"
                    android:src="@drawable/edit"
                    android:layout_gravity="right"
                    android:text="Edit profile"
                    android:textSize="18sp"
                    app:tint="@color/quantum_googgreen800" />




            </LinearLayout>


            <LinearLayout
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="@dimen/_10sdp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView25"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginLeft="16dp"
                    android:textColor="@color/black"
                    android:fontFamily="@font/simple_beauty"
                    android:text="Email"
                    android:textSize="@dimen/_18sdp" />


                <EditText
                    android:id="@+id/tv_email"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="16dp"
                    android:layout_marginRight="16dp"
                    android:gravity="end"
                    android:background="@null"
                    android:textColorHint="@color/black"
                    android:hint="Not Provided"
                    android:fontFamily="@font/simple_beauty"
                    android:textSize="@dimen/_16sdp"
                    android:textAlignment="viewEnd"
                    android:textColor="@color/black"
                    android:enabled="false" />

            </LinearLayout>


            <FrameLayout
                android:id="@+id/layoutImage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/_20sdp">


                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/iv_profile_photo"
                    android:layout_width="@dimen/_100sdp"
                    android:layout_height="@dimen/_100sdp"
                    android:scaleType="centerCrop"
                    android:layout_gravity="center"
                    android:background="@drawable/circle"
                    android:backgroundTint="@color/lighter_light_blue"
                    app:civ_border_color="@color/black"
                    app:civ_border_width="1dp" />

                <TextView
                    android:id="@+id/tv_uploadPhoto"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:drawableTint="@color/light_blue"
                    android:text="Upload Photo"
                    android:textStyle="bold"
                    android:textColor="@color/red"
                    android:textSize="15sp"
                    android:visibility="gone" />

            </FrameLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="@dimen/_10sdp"
                android:paddingBottom="@dimen/_10sdp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView22"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginLeft="16dp"
                    android:fontFamily="@font/simple_beauty"
                    android:textSize="@dimen/_16sdp"
                    android:text="First Name"
                    android:textColor="@color/black" />

                <EditText
                    android:id="@+id/tv_fname"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="16dp"
                    android:layout_marginRight="16dp"
                    android:fontFamily="@font/simple_beauty"
                    android:textSize="@dimen/_16sdp"
                    android:gravity="end"
                    android:textColorHint="@color/black"
                    android:hint="Not Provided"
                    android:textAlignment="viewEnd"
                    android:textColor="@color/black"
                    android:background="@null"
                    android:enabled="false" />

            </LinearLayout>




            <View
                android:id="@+id/view11"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="8dp"
                android:background="@android:color/darker_gray" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/_10sdp"

            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView23"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/simple_beauty"
                android:textSize="@dimen/_16sdp"
                android:layout_marginStart="16dp"
                android:paddingBottom="@dimen/_10sdp"
                android:layout_marginLeft="16dp"
                android:text="Last Name"
                android:textColor="@color/black" />

            <EditText
                android:id="@+id/tv_lname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="16dp"
                android:layout_marginRight="16dp"
                android:gravity="end"
                android:background="@null"
                android:textColorHint="@color/black"
                android:hint="Not Provided"
                android:fontFamily="@font/simple_beauty"
                android:textSize="@dimen/_16sdp"
                android:textAlignment="viewEnd"
                android:textColor="@color/black"
                android:enabled="false" />

        </LinearLayout>


            <View
                android:id="@+id/view7"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@android:color/darker_gray" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/_10sdp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView24"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:text="Contact number"
                android:textColor="@color/black"
                android:fontFamily="@font/simple_beauty"
                android:textSize="@dimen/_16sdp" />

            <EditText
                android:id="@+id/et_contactNum"
                android:layout_width="match_parent"
                android:fontFamily="@font/simple_beauty"
                android:textSize="@dimen/_16sdp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="16dp"
                android:layout_marginRight="16dp"
                android:gravity="end"
                android:background="@null"
                android:textColorHint="@color/black"
                android:hint="Not Provided"
                android:textAlignment="viewEnd"
                android:textColor="@color/black"
                android:enabled="false" />

        </LinearLayout>

            <View
                android:id="@+id/view8"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="16dp"
                android:background="@android:color/darker_gray" />




            <TextView
                android:id="@+id/tv_changePassword"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:drawablePadding="10dp"
                android:drawableTint="@color/orange"
                android:gravity="center"
                android:text="Change password"
                android:layout_gravity="center"
                android:textColor="@color/black"
                android:fontFamily="@font/simple_beauty"
                android:textSize="@dimen/_16sdp"
                 />

            <View
                android:id="@+id/view5"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="16dp"
                android:background="@android:color/darker_gray" />



        </LinearLayout>
    </ScrollView>

    <androidx.cardview.widget.CardView
        android:id="@+id/cardViewBottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:backgroundTint="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:backgroundTint="@color/white"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_messageBtn"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_margin="8dp"
                android:layout_weight="20"
                android:background="@color/white"
                android:src="@drawable/message" />

            <ImageView
                android:id="@+id/iv_notificationBtn"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_margin="8dp"
                android:layout_weight="20"
                android:background="@color/white"
                android:src="@drawable/notification"
                />

            <ImageView
                android:id="@+id/iv_homeBtn"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_margin="8dp"
                android:layout_weight="20"
                android:background="@color/white"
                android:src="@drawable/home"

                />

            <ImageView
                android:id="@+id/iv_accountBtn"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_margin="8dp"
                android:layout_weight="20"
                android:background="@color/white"
                android:src="@drawable/accounts"
                />

            <ImageView
                android:id="@+id/iv_moreBtn"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_margin="8dp"
                android:layout_weight="20"
                android:background="@color/white"
                android:src="@drawable/settings"
                app:tint="@color/light_blue"
                />

        </LinearLayout>


    </androidx.cardview.widget.CardView>

    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:indeterminate="true"
        android:visibility="visible"
        android:indeterminateTint="@color/light_blue"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.906" />



</LinearLayout>